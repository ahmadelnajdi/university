<div  style="width:600px; height:700px">
    <img id="myImage" src="/img/ua.png" >
</div>

<script type="text/javascript">


        function DisplayLocation() {

            var name ='@ViewBag.path';

            if (name == "genie") {

                document.getElementById('myImage').src = '/img/genie.png';
            }

            else
                if ( name == "business")
                    document.getElementById('myImage').src = '/img/business.png';
                else
                    if (name =="eps")
                        document.getElementById('myImage').src = '/img/eps.png'
                    else 
                        document.getElementById('myImage').src = '/img/sec.png'
        }



            window.onload = DisplayLocation;
</script>



     


